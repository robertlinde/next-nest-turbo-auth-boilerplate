{
  "name": "auth-monorepo",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "start:dev": "turbo run start:dev",
    "start:prod": "turbo run start:prod",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "test": "turbo run test",
    "test:e2e": "turbo run test:e2e",
    "test:cov": "turbo run test:cov",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.1",
    "@commitlint/config-conventional": "19.8.1",
    "eslint": "9.27.0",
    "eslint-plugin-unicorn": "59.0.1",
    "husky": "9.1.7",
    "lint-staged": "16.0.0",
    "prettier": "3.5.3",
    "ts-node": "10.9.2",
    "turbo": "2.5.3",
    "xo": "0.60.0"
  },
  "engines": {
    "node": "24.1.0",
    "npm": "11.4.0"
  },
  "packageManager": "npm@11.4.0"
}
